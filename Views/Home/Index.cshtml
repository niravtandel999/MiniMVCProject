    @model List<UserTasks>

    @{
        ViewData["Title"] = "Home";
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            body {
                background-color: #f8f9fa;
            }

            h2 {
                color: #333;
                margin-bottom: 5px;
            }

            .table th, .table td {
                vertical-align: middle;
            }

            .btn {
                margin-right: 5px;
            }
        </style>
    </head>
    <body>

        <div class="container mt-5">
            <h2 class="text-center">User Tasks</h2>

            <div class="mb-3 text-right">
                <a href="@Url.Action("Add", "Home")" class="btn btn-success">Add New Task</a>
            </div>

            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Task ID</th>
                        <th>Task Name</th>
                        <th>Description</th>
                        <th>Create Date</th>
                        <th>Complete Date</th>
                        <th>Task Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TaskId</td>
                            <td>@item.TaskName</td>
                            <td>@item.TaskDescription</td>
                            <td>@item.CreateDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.CompleteDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.TaskStatus</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Update" asp-controller="Home" asp-route-Id="@item.TaskId">Update</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Home" asp-route-Id="@item.TaskId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    </body>
    </html>

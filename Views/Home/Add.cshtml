@model AddUsersTasks
@{
    ViewData["Title"] = "Add Task";
}

<h2 class="text-center mb-2" style="font-family: 'Arial', sans-serif; color: #333;">Add Tasks</h2>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Add" method="post" class="border p-4 bg-light shadow">
                <div class="form-group mb-3">
                    <label asp-for="TaskName" class="font-weight-bold" style="color: #555;"></label>
                    <input asp-for="TaskName" class="form-control" placeholder="Enter task name" style="border-radius: 8px;" />
                    <span asp-validation-for="TaskName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TaskDescription" class="font-weight-bold" style="color: #555;"></label>
                    <textarea asp-for="TaskDescription" class="form-control" placeholder="Enter task description" style="border-radius: 8px;"></textarea>
                    <span asp-validation-for="TaskDescription" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CreateDate" class="font-weight-bold" style="color: #555;"></label>
                    <input asp-for="CreateDate" type="date" class="form-control" style="border-radius: 8px;" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CompleteDate" class="font-weight-bold" style="color: #555;"></label>
                    <input asp-for="CompleteDate" type="date" class="form-control" style="border-radius: 8px;" />
                    <span asp-validation-for="CompleteDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TaskStatus" class="font-weight-bold" style="color: #555;"></label>
                    <select asp-for="TaskStatus" class="form-control" style="border-radius: 8px;">
                        <option value="">Select Status</option>
                        <option value="Pending">Pending</option>
                        <option value="Completed">Completed</option>
                        <option value="In Progress">In Progress</option>
                    </select>
                    <span asp-validation-for="TaskStatus" class="text-danger"></span>
                </div>

                <div class="form-group text-center mb-4">
                    <input type="submit" value="Add Task" class="btn btn-primary btn-lg w-100" style="
                        border-radius: 8px;
                        background-color: #007bff;
                        border-color: #007bff;
                        font-weight: bold;" />
                </div>
            </form>

            <div class="text-center mt-3">
                <button class="btn btn-secondary">
                    <a href="@Url.Action("Index", "Home")"
                       style="
                       color: white;
                       text-decoration: none;
                       font-weight: 10px;">Back to Task List</a>
                </button>
            </div>
        </div>
    </div>
</div>

